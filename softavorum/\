#include <iostream>
#include <ctime>
#include <cstdlib>

void fillAndShow();
void sort();

int main();
{
	srand ( time ( NULL ) );

	int masiv [1000] = {};

	void fillAndShow();
	void sort();
	
	return 0;
}

void fillAndShow()
{
	for ( int i = 0; i < 1000; i++ )
	{
		std::cout << "| ";
		masiv [i] = rand() % 10000;
		std::cout << masiv[i] << " ";
		std::cout << " |";
	}
}

void sort()
{
	for ( int i = 0; i < 1000; i++ )
	{
		for ( int j = i + 1; j < 1000; j++ )
		{
			if ( masiv[j] < masiv [i] )
			{
				masiv[i] = x;
				masiv[j] = masiv[i];
				masiv[j] = x;
			}
		}
	}
}
